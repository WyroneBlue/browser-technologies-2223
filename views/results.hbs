<h1>Results</h1>
<form action="/results/save" method="POST" class="no-js">
    <section id="user-info">
        <h2>User information</h2>
        {{> input field="name" name="Name" value=userInfo.name type="text"}}
        {{> input field="email" name="Email" value=userInfo.email type="email"}}
        {{> input field="number" name="Student number" value=userInfo.number type="text" pattern="[0-9]{7}" maxlength="7"}}
    </section>
    {{#each courses }}
        <section id="{{ slug }}">
            <h2>{{ name }}</h2>

            {{> input slug=slug field="teacher" name="Teacher" value=values.teacher type="text"}}
            {{> input slug=slug field="startdate" name="Startdate" value=values.startdate type="date"}}

            {{> radio name="Course difficulty" slug=slug field="level" count=11 value=values.level}}
            {{> radio name="Course explanations by teacher" slug=slug field="explanation" count=11 value=values.explanation}}
            {{> radio name="New Insights from the course" slug=slug field="insight" count=11 value=values.insight}}

        </section>
    {{/each}}

    <button type="submit">
        Submit enquete
    </button>
</form>