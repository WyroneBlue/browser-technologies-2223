
{{#if slug}}

    <label for="{{ slug }}-{{ field }}">
        {{ name }}

        <input type="{{ type }}" name="{{ slug }}-{{ field }}" id="{{ slug }}-{{ field }}" value="{{ value }}" required>
        <span>✅</span>
    </label>
{{else}}
    <label for="{{ field }}">
        {{ name }}

        <input type="{{ type }}" name="{{ field }}" id="{{ field }}" value="{{ value }}" required>
        <span>✅</span>
    </label>
{{/if}}